<div class="row justify-content-md-center">
  <div class="col-4 card bg-cover text-center">
    <% flash.each do |key, value| %>
      <div class="alert alert-primary alert-dismissible fade show <%= key %>" role="alert">
        <span class="alert-icon"><i class="ni ni-like-2"></i></span>
        <span class="alert-text"><%= value %></span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
    <h3>Login in <%= loginArea %></h3>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email,
                          autofocus: true,
                          autocomplete: "email",
                          placeholder: "Email de login",
                          required: "true",
                          class: "form-control",
                          type: "email" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password,
                             autocomplete: "current-password",
                             placeholder: "Senha",
                             required: "true",
                             class: "form-control",
                             type: "password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check">
          <%= f.check_box :remember_me, class: "form-check-input", type: "checkbox" %>
          <%= f.label :remember_me, class: "custom-control-label" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "btn bg-gradient-primary btn-lg" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
