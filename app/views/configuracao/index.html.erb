<div>
  <h1>Configurações Gerais</h1>
  <p>Nessa parte, você irá completar as informações e configurações gerais do seu consultório</p>
</div>
<div>
  <h2>Endereço do meu consultório</h2>

  <!-- app/views/enderecos/index.html.erb -->

  <%= form_with url: services_addressAPI_path	, method: :post, local: true do |form| %>
    <div class="form-group">
      <%= form.text_field :cep, class: 'form-control', placeholder: 'CEP', type: 'text' %>
    </div>
    <%= form.submit 'Buscar endereço', class: 'btn btn-primary' %>
  <% end %>

  <% if @endereco_formatado.present? %>
    <form class="enderecoUserForm">
      <div class="form-group">
        <input class="form-control" type="text" id="logradouro-input" placeholder="Logradouro" value="<%= @endereco_formatado[:street] %>">
      </div>
      <div class="form-group">
        <input class="form-control" type="text" id="bairro-input" placeholder="Bairro" value="<%= @endereco_formatado[:neighborhood] %>">
      </div>
      <div class="form-group">
        <input class="form-control" type="text" id="cidade-input" placeholder="Cidade" value="<%= @endereco_formatado[:city] %>">
      </div>
      <div class="form-group">
        <input class="form-control" type="text" id="estado-input" placeholder="Estado" value="<%= @endereco_formatado[:state] %>">
      </div>
      <button type="submit" class="btn btn-success">Salvar</button>
    </form>
  <% end %>

</div>
